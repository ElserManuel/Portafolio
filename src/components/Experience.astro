---
import { siteConfig } from "../config";
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
---

{
  hasExperience && (
    <section id="experience" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Experiencia
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="relative">
              {/* Timeline line */}
              <div class="absolute left-1/2 top-0 bottom-0 w-0.5 bg-gray-200 -translate-x-1/2 hidden md:block" />

              {siteConfig.experience.map((exp, index) => (
                <div class="relative mb-12 last:mb-0">
                  {/* Timeline dot */}
                  <div
                    class="absolute left-1/2 top-8 w-4 h-4 rounded-full -translate-x-1/2 z-20 transition-all duration-300 hidden md:block"
                    style={`background-color: ${siteConfig.accentColor}; box-shadow: 0 0 0 4px white, 0 0 0 6px ${siteConfig.accentColor}40`}
                  />

                  {/* Experience card */}
                  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 sm:p-7 md:p-8 hover:shadow-lg hover:border-gray-300 transition-all duration-300">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-5">
                      <div>
                        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-1">
                          {exp.title}
                        </h3>
                        <p
                          class="text-lg sm:text-xl font-semibold"
                          style={`color: ${siteConfig.accentColor}`}
                        >
                          {exp.company}
                        </p>
                      </div>
                      <span class="inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium mt-3 sm:mt-0">
                        {exp.dateRange}
                      </span>
                    </div>

                    <ul class="space-y-3">
                      {exp.bullets.map((bullet) => (
                        <li class="flex items-start">
                          <svg
                            class="w-5 h-5 mt-0.5 mr-3 flex-shrink-0"
                            style={`color: ${siteConfig.accentColor}`}
                            fill="currentColor"
                            viewBox="0 0 20 20"
                          >
                            <path
                              fill-rule="evenodd"
                              d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                              clip-rule="evenodd"
                            />
                          </svg>
                          <span class="text-base text-gray-700 leading-relaxed">
                            {bullet}
                          </span>
                        </li>
                      ))}
                    </ul>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}
