---
import { siteConfig } from "../config";
const hasTechnicalSkills = siteConfig.technicalSkills && Object.keys(siteConfig.technicalSkills).length > 0;
---

{
  hasTechnicalSkills && (
    <section id="skills" class="p-8 sm:p-12 md:p-16 lg:p-24 bg-gray-50">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Habilidades Técnicas
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
            <p class="mt-6 text-base text-gray-600">
              Stack tecnológico completo con experiencia en desarrollo Full Stack, arquitectura de microservicios y DevOps.
            </p>
          </div>

          <div class="lg:col-span-8">
            <div class="grid grid-cols-1 gap-6">
              {/* Frontend */}
              {siteConfig.technicalSkills.frontend && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.frontend.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.frontend.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Backend */}
              {siteConfig.technicalSkills.backend && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.backend.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.backend.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Databases */}
              {siteConfig.technicalSkills.databases && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.databases.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.databases.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* DevOps & Cloud */}
              {siteConfig.technicalSkills.devops && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.devops.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.devops.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Security */}
              {siteConfig.technicalSkills.security && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.security.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.security.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Messaging */}
              {siteConfig.technicalSkills.messaging && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.messaging.title}
                    </h3>
                  </div>
                  <ul class="space-y-2">
                    {siteConfig.technicalSkills.messaging.skills.map((skill) => (
                      <li class="flex items-start">
                        <span class="inline-block w-1.5 h-1.5 rounded-full bg-gray-400 mt-2 mr-3 flex-shrink-0" />
                        <span class="text-sm text-gray-700">{skill}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              )}

              {/* Methodologies */}
              {siteConfig.technicalSkills.methodologies && (
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg transition-all duration-300">
                  <div class="flex items-center gap-3 mb-4">
                    <div
                      class="w-12 h-12 rounded-lg flex items-center justify-center"
                      style={`background-color: ${siteConfig.accentColor}15`}
                    >
                      <svg
                        class="w-6 h-6"
                        style={`color: ${siteConfig.accentColor}`}
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
                        />
                      </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900">
                      {siteConfig.technicalSkills.methodologies.title}
                    </h3>
                  </div>
                  <div class="flex flex-wrap gap-2">
                    {siteConfig.technicalSkills.methodologies.skills.map((skill) => (
                      <span class="px-3 py-1.5 bg-gray-100 text-gray-800 rounded-lg text-sm font-medium hover:bg-gray-200 transition-colors">
                        {skill}
                      </span>
                    ))}
                  </div>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}